@model peakmotion.Models.ProductDetailViewModel

<div class="product-detail">
    <h1>@Model.Productname</h1>
    <p><strong>Price:</strong> $@Model.Unitprice.ToString("F2")</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Quantity Available:</strong> @Model.Qty</p>

    <p><strong>Category:</strong> @Model.Fkcategory.Categoryname</p>

    <div>
        <h4>Orders</h4>
        @if (Model.OrderProducts.Any())
        {
            <ul>
                @foreach (var order in Model.OrderProducts)
                {
                    <li>Order ID: @order.Pkorderid</li>
                }
            </ul>
        }
        else
        {
            <p>No orders for this product yet.</p>
        }
    </div>
</div>