@model peakmotion.Models.ProductDetailViewModel

<head>
    <link rel="stylesheet" href="~/css/details.css" />
</head>

<div class="product-detail">
    <h1>@Model.Productname</h1>
    <p><strong>Price:</strong> $@Model.Unitprice.ToString("F2")</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Quantity Available:</strong> @Model.Qty</p>

    <p><strong>Category:</strong></p>

    <div>
        <h4>Orders</h4>
        @if (Model.OrderProducts.Any())
        {
            <ul>
                @foreach (var order in Model.OrderProducts)
                {
                    <li>Order ID: @order.Fkorderid</li>
                }
            </ul>
        }
        else
        {
            <p>No orders for this product yet.</p>
        }
    </div>

    <form method="post" asp-controller="Product" asp-action="Details">
        <input type="hidden" name="ProductId" value="@Model.Pkproductid" />
        <input type="hidden" name="ProductName" value="@Model.Productname" />
        <input type="hidden" name="ProductPrice" value="$@Model.Unitprice.ToString("F2")" />

        <label for="Quantity">Quantity:</label>
        <input type="number" id="Quantity" name="Quantity" min="1" value="1" />

        <button type="submit">Add to Cart</button>
    </form>
</div>