
<div class="product-grid">
    @foreach (var saleItem in Model)
    {
        <partial name="_ProductImage" for="@saleItem" />
    }
</div>

<style>
    .product-grid {
        width: 100%;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        row-gap: 1rem;
    }
</styles>
