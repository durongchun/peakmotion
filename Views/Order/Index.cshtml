@model IEnumerable<peakmotion.ViewModels.OrderVM>
@{
    ViewData["Title"] = "Orders";
}
<h1>Orders</h1>
<table>
    <thead>
        <tr>
            <th>Orders Number</th>
            <th>Customer Name</th>
            <th>Orders Date</th>
            <th>Total</th>
            <th>Shipping Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.customerName</td>
                <td>@order.OrderDate</td>
                <td>@order.Total</td>
                <td>@order.ShippingStatus</td>
                <td>
                    <a href="@Url.Action("Edit","Order",new{id =order.OrderId})">Edit</a> |
                    <a href="@Url.Action("Delete","Order",new{id = order.OrderId})">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<style>
    table
    {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
    }
    th,td
    {
        padding: 12px 15px;
        border: 1px solid black;
    }
</style>