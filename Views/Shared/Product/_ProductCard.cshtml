@model peakmotion.ViewModels.ProductVM

<div class="product">

    <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ID" class="">


        <img src="images/pexels-tima-miroshnichenko-7010141.jpg" alt="Product image" width="200">
        <p class="product-name">@Model.ProductName</p>
    </a>
    <p class="product-desc">@Model.Description</p>
    @{
        var hasDiscount = @Model.Discount != null && @Model.Discount.Description != "free shipping";
        var newPrice = @Model.Discount?.Amount / 100 * @Model.Price;
        var newPriceStr = newPrice?.ToString("C");
    }
    @if (@hasDiscount)
    {
        <p class="product-price">
            <span class="product-discounted">@Model.Price</span>
            @newPriceStr
        </p>
    }
    else
    {
        <p class="product-price">@Model.Price.ToString("C")</p>
    }

    <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ID" class="">

    </a>
    </br>

        <!-- for wishlist btn  -->
    <a asp-controller="Wishlist"
       asp-action="Add"
       asp-route-productId="@Model.ID"
       class="add-to-wishlist-btn">
       Add to Wishlist
    </a>

    <!-- for cart btn  -->
    <a asp-controller="Cart" asp-action="AddCartItem" asp-route-productId="@Model.ID" class="add-to-cart-btn">
        Add to Cart
    </a>

</div>

<style>
    .product:hover {
        opacity: 0.8;
    }

    .product {
        padding: 0.25rem;
        width: 200px;
        overflow: hidden;

        img {
            width: 200px;
            height: 300px;
            padding-bottom: 0.5rem;
        }

        p {
            margin: 0%;
        }

        .product-name {
            font-size: 1rem;
            font-weight: 700;
            line-clamp: 2;
            text-overflow: ellipsis;
            overflow: hidden;
        }

        .product-desc {
            font-size: 0.8rem;
            opacity: 0.7;
            line-clamp: 2;
            text-overflow: ellipsis;
            overflow: hidden;
        }

        .product-price {
            margin-top: 0.25rem;
            text-align: right;
            font-size: 0.8rem;
            opacity: 0.7;
        }

        .product-discounted {
            text-decoration: line-through;
            opacity: 0.5;
        }
    }
</style>
