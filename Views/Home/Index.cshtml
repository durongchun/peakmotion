@model IEnumerable<peakmotion.ViewModels.ProductVM>

    @{
    ViewData["Title"] = "Home Page";
    }

    <link rel="stylesheet" href="~/css/homepage.css">
    <div>
        <img class="homepageheader" src="~/images/homeheader.jpg" alt="homeheaderimage">
        <div class="container">

            <div class="bestseller">
                <h2 class="text-center">GEAR UP. <br> ADVENTRURE AWAITS!</h2>
                <button>SHOP BEST SELLERS</button>
            </div>

            <div class="categories">
                <div class="d-flex flex-column gap-3">
                    <a class="" asp-area="" asp-controller="Product" asp-action="Index" asp-route-category="Top">
                        <img src="https://picsum.photos/500/700?random=1" alt="">
                    </a>
                    <button>TOPS</button>
                </div>
                <div class="d-flex flex-column gap-3">
                    <a class="" asp-area="" asp-controller="Product" asp-action="Index" asp-route-category="Bottom">
                        <img src="https://picsum.photos/500/700?random=2" alt="">
                    </a>
                    <button>BOTTOMS</button>
                </div>
                <div class="d-flex flex-column gap-3">
                    <a class="" asp-area="" asp-controller="Product" asp-action="Index"
                        asp-route-category="Accessories">
                        <img src="https://picsum.photos/500/700?random=3" alt="">
                    </a>
                    <button>ACCESSORIES</button>
                </div>
                <div class="d-flex flex-column gap-3">
                    <a class="" asp-area="" asp-controller="Product" asp-action="Index" asp-route-category="Equipment">
                        <img src="https://picsum.photos/500/700?random=4" alt="">
                    </a>
                    <button>EQUIPMENT</button>
                </div>

            </div>

            <div class="bg-dark">
                <p>Dec 14-21</p>
                <h1>25% OFF</h1>
                <h1>EQUIPMENT</h1>
            </div>

            <div class="shopwear">
                <div class="d-flex flex-column gap-3">
                    <a class="" asp-area="" asp-controller="Product" asp-action="Index" asp-route-category="Men">
                        <img src="https://picsum.photos/500/700?random=5" alt="">
                    </a>
                    <button>SHOP MENSWEAR</button>
                </div>
                <div class="d-flex flex-column gap-3">
                    <a class="" asp-area="" asp-controller="Product" asp-action="Index" asp-route-category="Women">
                        <img src="https://picsum.photos/500/700?random=6" alt="">
                    </a>
                    <button>SHOP WOMENSWEAR</button>
                </div>
            </div>

            <div>
                <h2 class="peak">POPULAR RIGHT NOW</h2>
                <div class="popular">
                    @foreach (var featuredItem in Model)
                    {
                    <partial name="Product/_ProductCard" for="@featuredItem" />
                    }
                </div>
            </div>

            <div class="member">
                <img src="~/images/noun-hiking-1631508.svg" alt="">
            </div>


            <div>
                <h2 class="peak">#PEAKMOTION</h2>
                <div class="peakmotion">
                    <img src="https://picsum.photos/500/700?random=11" alt="">
                    <img src="https://picsum.photos/500/700?random=11" alt="">
                    <img src="https://picsum.photos/500/700?random=11" alt="">
                    <img src="https://picsum.photos/500/700?random=11" alt="">
                    <img src="https://picsum.photos/500/700?random=11" alt="">
                </div>
            </div>

        </div>


    </div>